                    </td>
                    <td>
                        {{ statistic.infrastructure[constant('AppBundle\\Entity\\Incident::ACCIDENT_INFRASTRUCTURE_SCHUTZSTREIFEN')] }}
                    </td>
                </tr>

                <tr>
                    <td>
                        Fahrradstraße
                    </td>
                    <td>
                        {{ statistic.infrastructure[constant('AppBundle\\Entity\\Incident::ACCIDENT_INFRASTRUCTURE_FAHRRADSTRASSE')] }}
                    </td>
                </tr>

                <tr>
                    <td>
                        andere / abseits der Straße
                    </td>
                    <td>
                        {{ statistic.infrastructure[constant('AppBundle\\Entity\\Incident::ACCIDENT_INFRASTRUCTURE_OTHER')] }}
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-xs-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3">
            <h3 class="text-center">
                Unfallgegner
            </h3>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-xs-12 col-sm-8 col-md-6 offset-sm-2 offset-md-3">
            <table class="table">
                <thead>
                <tr>
                    <th>
                        Unfallgegner
                    </th>
                    <th>
                        Anzahl
                    </th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>
