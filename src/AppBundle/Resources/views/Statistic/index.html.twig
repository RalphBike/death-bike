                    </td>
                </tr>

                <tr>
                    <td>
                        keiner / Alleinunfall
                    </td>
                    <td>
                        {{ statistic.opponent[constant('AppBundle\\Entity\\Incident::ACCIDENT_OPPONENT_NONE')] }}
                    </td>
                </tr>

                <tr>
                    <td>
                        unbekannt
                    </td>
                    <td>
