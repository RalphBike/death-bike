                </tr>

                <tr>
                    <td>
                        gemeinsamer Fuß- und Radweg
                    </td>
                    <td>
                        {{ statistic.infrastructure[constant('AppBundle\\Entity\\Incident::ACCIDENT_INFRASTRUCTURE_COMBINED')] }}
