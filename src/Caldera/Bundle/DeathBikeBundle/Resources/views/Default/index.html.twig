{% extends 'CalderaDeathBikeBundle::layout.html.twig' %}

{% block content %}
    <div class="row mt-3">
        <div class="col-12">
            <h1 class="text-center">
                GetÃ¶tete Radfahrer im Jahr {{ year }}
            </h1>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div id="flipcounter">
                <div id="flipbreak">

                </div>
                <div class="digit">
                    {{ counter[0:1] }}
                </div>
                <div class="digit">
                    {{ counter[1:1] }}
                </div>
                <div class="digit">
                    {{ counter[2:1] }}
                </div>
            </div>
        </div>
    </div>

{% if incidentList|length > 0 %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div id="map" style="height: 50vh;">

            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2">
            <ul class="list-unstyled">
                {% for incident in incidentList %}
                <li class="mt-3">
                    <p class="text-center">
                        <time>
                            {{ incident.dateTime|date('d.m.Y') }}
                        </time>
                    </p>

                    <a href="https://cycleways.info/{{ incident.slug }}">
                        <h3 class="text-center">
                            {{ incident.title }}
                        </h3>
                    </a>

                    <p>
                        {{ incident.description }}
                    </p>
                </li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}